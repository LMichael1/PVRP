@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome!</h1>
    <p>Upload your dataset</p>
</div>
<div class="d-flex justify-content-center">
    <div class="w-50 text-center">
        <div class="alert alert-danger" role="alert">
            Incorrect file. Try again.
        </div>
        <form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="Info">
            <div>
                <input class="form-control form-control-lg" id="formFileLg" type="file" name="file" accept=".txt">
            </div>
            <br>
            <input type="submit" class="btn btn-primary btn-lg" value="Upload" />
        </form>
    </div>
</div>